{
  "compilerOptions": {
    "baseUrl": ".",
    "checkJs": false,
    "target": "ES6",
    "strict": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./src/*"],
      "@app/*": ["./src/renderer/*"],
    },
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vite/**/*", "out/**/*"]
}
