{
  "compilerOptions": {
    "rootDir": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "checkJs": false,
    "strict": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowSyntheticDefaultImports": true,

    /* Paths are relative to base URL */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./packages/main/src/*"],
      "@ren/*": ["./packages/renderer/src/*"],
      "@ext/*": ["./packages/extension/src/*"],
    },
    "declarationMap": false,
    "noEmitOnError": true,
  },
  "include": [
    "eslint.config.cjs",
    "packages/**/*.ts",
    "packages/**/*.js",
    "packages/**/*.tsx",
    "scripts/**/*",
    "vite.base.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*/node_modules",
    "**/*/dist",
    ".vite/**/*"
  ],
}