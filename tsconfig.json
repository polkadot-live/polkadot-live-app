{
  "compilerOptions": {
    "rootDir": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "checkJs": false,
    "strict": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowSyntheticDefaultImports": true,

    /* Paths are relative to base URL */
    "baseUrl": ".",
    "paths": {
      "@polkadot-live/consts/*": ["./packages/consts/src/*"],
      "@polkadot-live/styles/*": ["./packages/styles/src/*"],
      "@polkadot-live/types/*": ["./packages/types/src/*"],

      "@polkadot-live/screens": ["./packages/screens/src/index.ts"],
      "@polkadot-live/screens/*": ["./packages/screens/src/*"],

      "@polkadot-live/ui/components": ["./packages/ui/src/components/index.ts"],
      "@polkadot-live/ui/components/*": ["./packages/ui/src/components/*"],

      "@polkadot-live/ui/hooks": ["./packages/ui/src/hooks/index.ts"],
      "@polkadot-live/ui/hooks/*": ["./packages/ui/src/hooks/*"],

      "@polkadot-live/ui/kits/buttons": ["./packages/ui/src/kits/buttons/index.ts"],
      "@polkadot-live/ui/kits/overlay": ["./packages/ui/src/kits/overlay/index.ts"],
    },
    "declarationMap": false,
    "noEmitOnError": true,
  },
  "include": [
    "eslint.config.cjs",
    "packages/**/*.ts",
    "packages/**/*.js",
    "packages/**/*.tsx",
    "scripts/**/*",
    "vite.base.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*/node_modules",
    "**/*/dist",
    ".vite/**/*"
  ],
}