{
  "name": "polkadot-live",
  "productName": "Polkadot Live",
  "version": "0.7.0-alpha",
  "description": "Decentralised Polkadot Notifications and Chain Interactions on the Desktop.",
  "type": "module",
  "private": true,
  "main": "packages/main/dist/main.cjs",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "asar:list": "asar list",
    "build": "nx run-many -t build",
    "build:ui": "nx build @polkadot-live/ui",
    "lint": "nx run-many -t lint",
    "typecheck": "nx run-many -t typecheck",
    "clear:dist": "nx run-many -t clear:dist",
    "clear:ui": "nx clear @polkadot-live/ui",
    "clear": "nx run-many -t clear && rm -rf node_modules tsconfig.tsbuildinfo",
    "vendors": "cross-env ELECTRON_RUN_AS_NODE=1 electron scripts/update-electron-vendors.js",
    "watch": "yarn clear:dist && cross-env DEBUG=1 DISABLE_ANALYTICS=1 MODE=development node scripts/watch.js",
    "watch:build": "nx watch --projects=@polkadot-live/ui -- nx build \\$NX_PROJECT_NAME",
    "package": "cross-env MODE=production yarn run build && electron-builder --config scripts/electron-builder.config.prod.mjs",
    "package:dev": "cross-env MODE=development yarn run build && electron-builder --config scripts/electron-builder.config.dev.mjs",
    "package:win": "cross-env MODE=production CSC_IDENTITY_AUTO_DISCOVERY=false yarn run build && electron-builder build --win --config scripts/electron-builder.config.prod.mjs",
    "graph": "nx graph",
    "test": "nx run-many -t test"
  },
  "engines": {
    "node": ">=23.1.0"
  },
  "license": "GPL-3.0-only",
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/modifiers": "^7.0.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-regular-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@ledgerhq/hw-transport": "^6.31.4",
    "@ledgerhq/hw-transport-node-hid": "^6.29.5",
    "@polkadot/util": "^13.4.3",
    "@polkadot/util-crypto": "^13.4.3",
    "@radix-ui/react-accordion": "^1.2.2",
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-icons": "^1.3.2",
