{
  "name": "polkadot-live",
  "productName": "Polkadot Live",
  "version": "0.12.0-beta",
  "description": "Decentralised Polkadot Notifications and Chain Interactions on the Desktop.",
  "type": "module",
  "private": true,
  "main": "packages/main/dist/main.cjs",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "asar:list": "asar list",
    "build": "cross-env MODE=production nx run-many -t build --exclude=@polkadot-live/extension",
    "build:core": "nx build:dev @polkadot-live/core",
    "build:contexts": "nx build:dev @polkadot-live/contexts",
    "build:screens": "nx build:dev @polkadot-live/screens",
    "build:ui": "nx build:dev @polkadot-live/ui",
    "lint": "nx run-many -t lint",
    "lint:check": "eslint .",
    "typecheck": "tsc --noEmit",
    "clear:core": "nx clear:dist @polkadot-live/core",
    "clear:dist": "nx run-many -t clear:dist",
    "clear:contexts": "nx clear:dist @polkadot-live/contexts",
    "clear:screens": "nx clear @polkadot-live/screens",
    "clear:ui": "nx clear @polkadot-live/ui",
    "clear": "nx run-many -t clear && rm -rf node_modules tsconfig.tsbuildinfo",
    "vendors": "cross-env ELECTRON_RUN_AS_NODE=1 electron scripts/update-electron-vendors.js",
    "watch": "cross-env DEBUG=1 DISABLE_ANALYTICS=1 MODE=development node scripts/watch.js",
    "watch:build": "nx watch --projects=@polkadot-live/ui -- nx build \\$NX_PROJECT_NAME",
    "package": "cross-env MODE=production yarn run build && electron-builder --config scripts/electron-builder.config.prod.mjs",
    "package:dev": "cross-env MODE=development yarn run build && electron-builder --config scripts/electron-builder.config.dev.mjs",
    "package:win": "cross-env MODE=production yarn run build && electron-builder build --win --config scripts/electron-builder.config.prod.mjs",
    "graph": "nx graph",
    "test": "nx run-many -t test",
    "ext:dev": "nx dev @polkadot-live/extension",
    "ext:build": "cross-env NODE_ENV=production nx build @polkadot-live/extension"
  },
  "engines": {
    "node": ">=23.1.0"
  },
  "license": "GPL-3.0-only",
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/modifiers": "^7.0.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-regular-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@ledgerhq/hw-transport": "6.31.4",
    "@ledgerhq/hw-transport-node-hid": "6.29.5",
    "@polkadot/util": "^13.4.3",
    "@polkadot/util-crypto": "^13.4.3",
    "@radix-ui/react-accordion": "^1.2.2",
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toggle": "^1.1.9",
    "@radix-ui/react-toggle-group": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.7",
    "@substrate/connect-known-chains": "^1.10.3",
    "@theme-toggles/react": "^4.1.0",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "@w3ux/extension-assets": "^2.2.0",
    "@w3ux/react-polkicon": "^3.1.1",
    "@w3ux/utils": "^2.0.8",
    "@walletconnect/modal": "^2.7.0",
    "@walletconnect/universal-provider": "^2.17.3",
    "@walletconnect/utils": "^2.17.3",
    "@zondax/ledger-substrate": "^1.1.2",
    "auto-launch": "^5.0.6",
    "axios": "^1.7.2",
    "bignumber.js": "^9.1.2",
    "date-fns": "^3.6.0",
    "debug": "^4.4.3",
    "dedot": "^0.18.5",
    "electron-store": "^8.1.0",
    "electron-unhandled": "^4.0.1",
    "framer-motion": "^11.1.1",
    "html5-qrcode": "^2.3.8",
    "p-limit": "^7.2.0",
    "qrcode-generator": "^1.4.4",
    "react": "^19.1.1",
    "react-content-loader": "^7.1.1",
    "react-dom": "^19.1.1",
    "react-error-boundary": "^4.0.12",
    "react-router": "^7.8.2",
    "react-spinners": "^0.14.1",
    "react-toastify": "^11.0.5",
    "smoldot": "^2.0.34",
    "styled-components": "^6.1.17",
    "svg-inline-loader": "^0.8.2"
  },
  "devDependencies": {
    "@dedot/chaintypes": "^0.185.0",
    "@electron/asar": "^3.2.17",
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@npmcli/map-workspaces": "^4.0.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/debug": "^4.1.12",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/pretty-format": "^3.1.2",
    "@vitest/ui": "^3.1.2",
    "cross-env": "^7.0.3",
    "electron": "^37.4.0",
    "electron-builder": "26.0.12",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "jsdom": "^25.0.1",
    "nx": "^20.1.2",
    "postcss": "^8.5.3",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^7.0.5",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-svgr": "^4.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "packageManager": "yarn@4.0.2"
}
