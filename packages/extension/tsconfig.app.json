{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ESNext",
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleDetection": "force",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["vite/client", "vite-plugin-svgr/client", "chrome"],
    "allowImportingTsExtensions": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "@polkadot-live/consts": ["../consts/src/index.ts"],
      "@polkadot-live/contexts": ["../contexts/src/index.ts"],
      "@polkadot-live/core": ["../core/src/index.ts"],
      "@polkadot-live/encoder": ["../encoder/src/index.ts"],
      "@polkadot-live/screens": ["../screens/src/index.ts"],
      "@polkadot-live/styles": ["../styles/src/index.ts"],
      "@polkadot-live/types": ["../types/src/index.ts"],
      "@polkadot-live/ui": ["../ui/src/index.ts"],

      "@polkadot-live/consts/*": ["../consts/src/*"],
      "@polkadot-live/styles/*": ["../styles/src/*"],
      "@polkadot-live/types/*": ["../types/src/*"],
      "@polkadot-live/ui/*": ["../ui/src/*"],
    },
  },
  "include": ["src"]
}
